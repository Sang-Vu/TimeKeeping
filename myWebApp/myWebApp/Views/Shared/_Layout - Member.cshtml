<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My WebApp</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("My WebApp", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @{
                        if (Session["userLevel"].ToString() == "0")
                        {
                            <li>@Html.ActionLink("Trang chủ", "Home", "Member")</li>
                            <li>@Html.ActionLink("Danh sách nhân viên", "EmployeeList", "Member")</li>
                            <li>@Html.ActionLink("Thông tin chấm công", "TimekeepingInfo", "Member")</li>
                            <li>@Html.ActionLink("Phân quyền quản trị", "GrantAdmin", "Member")</li>
                            <li>@Html.ActionLink("Đổi MK", "PasswordChange", "Member")</li>
                            <li>@Html.ActionLink("Thoát TK", "LogOut", "Member")</li>
                        }
                        else if (Session["userLevel"].ToString() == "1")
                        {
                            <li>@Html.ActionLink("Trang chủ", "Home", "Member")</li>
                            <li>@Html.ActionLink("Danh sách nhân viên", "EmployeeList", "Member")</li>
                            <li>@Html.ActionLink("Chấm công", "Timekeeping", "Member")</li>
                            <li>@Html.ActionLink("Thông tin chấm công", "TimekeepingInfo", "Member")</li>
                            <li>@Html.ActionLink("Đổi MK", "PasswordChange", "Member")</li>
                            <li>@Html.ActionLink("Thoát TK", "LogOut", "Member")</li>
                        }
                        else if (Session["userLevel"].ToString() == "2")
                        {
                            <li>@Html.ActionLink("Trang chủ", "Home", "Member")</li>
                            <li>@Html.ActionLink("Chấm công", "Timekeeping", "Member")</li>
                            <li>@Html.ActionLink("Thông tin chấm công", "TimekeepingInfo", "Member")</li>
                            <li>@Html.ActionLink("Đổi MK", "PasswordChange", "Member")</li>
                            <li>@Html.ActionLink("Thoát TK", "LogOut", "Member")</li>
                        }
                    }

                </ul>

                @{
                    if (Session["userName"] == null)
                    {
                        <span class="navbar-text text-white">@Session["user"]</span>
                    }
                    else
                    {
                        <span class="navbar-text text-white">@Session["user"] - @Session["userName"]</span>
                    }
                }

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
