@using myWebApp.Models
@model IEnumerable<User>
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post))

{
<fieldset>
    <legend>ĐĂNG NHẬP THÀNH VIÊN</legend>

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @if (@ViewBag.MessageForLogin != null)
    {
        <div id="alertForLogin" style="border: 1px solid red">
            @ViewBag.MessageForLogin
        </div>
    }
    <div class="form-outline">
        <label class="form-label" for="userID">Tài khoản</label>
        <input type="text" class="form-control" id="userID" name="id" required />
    </div>
    <br />
    <!-- Password input -->
    <div class="form-outline">
        <label class="form-label" for="pass">Mật khẩu</label>
        <input type="password" class="form-control" id="pass" name="password" required />
    </div>
    <br />
    <input class="btn btn-lg btn-primary btn-block btn-signin" type="submit" value="Đăng nhập" />
